{
    "manifest_version": 3,
    "name": "CloudCapture",
    "version": "1.0",
    "description": "Take screenshots and upload to Google Drive",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "identity"  
    ],
    "host_permissions": [
        "https://www.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "oauth2": {
        "client_id": "972397341408-l08mv479m0ldgrgphpmcnsvrl2h5f4md.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive.file",
            "https://www.googleapis.com/auth/userinfo.email"
        ]
    }
}
